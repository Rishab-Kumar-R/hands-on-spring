<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="name" class="java.lang.String">
        <constructor-arg value="Alex"/>
    </bean>

    <bean id="age" class="java.lang.Integer">
        <constructor-arg value="35"/>
    </bean>

    <!--    <context:component-scan base-package="com.example._02_Managing_Java_Objects.game" />-->

    <bean id="pacmanGame" class="com.example._02_Managing_Java_Objects.game.PacmanGame"/>
    <bean id="gameRunner" class="com.example._02_Managing_Java_Objects.game.GameRunner">
        <constructor-arg ref="pacmanGame"/>
    </bean>

</beans>